@model AirlineReservationsSystem.Domain.Entities.Payment

<form asp-action="CreatePayment" method="post">
    <div class="form-group">
        <label for="Amount">Amount</label>
        <input type="number" name="Amount" class="form-control" id="Amount" min="0" step="0.01" required placeholder="Enter amount">
        <small class="form-text text-muted">Enter the payment amount (e.g., 100.00)</small>
    </div>

    <div class="form-group">
        <label for="PaymentMethod">Payment Method</label>
        <select name="PaymentMethod" class="form-control" id="PaymentMethod" required>
            <option value="">Select a payment method</option>
            <option value="CreditCard">Credit Card</option>
            <option value="PayPal">PayPal</option>
            <option value="BankTransfer">Bank Transfer</option>
            <option value="Cash">Cash</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
