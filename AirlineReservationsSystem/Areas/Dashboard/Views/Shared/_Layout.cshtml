<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Airline Reservations System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AirlineReservationsSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane"></i> Airline Reservations
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--
                                                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="Airplane" asp-action="Index">Airplanes</a>
                        </li>
                        -->

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mb-5">
        <div class="row">
            <!-- Sidebar / Aside Section -->
            <aside class="col-md-3 col-lg-2 bg-light sidebar">
                @{
                    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
                }
                <div class="list-group">
                    <a class="list-group-item list-group-item-action  @(currentController == "Airplane" ? "active" : "")" asp-area="Dashboard" asp-controller="Airplane" asp-action="Index">Airplanes</a>
                    <a class="list-group-item list-group-item-action @(currentController == "Flight" ? "active" : "")" asp-area="Dashboard" asp-controller="Flight" asp-action="Index">Flights</a>
                    <a class="list-group-item list-group-item-action  @(currentController == "TravelRoute" ? "active" : "")" asp-area="Dashboard" asp-controller="TravelRoute" asp-action="Index">Travel Routes</a>

                    <!-- Add more links as needed -->
                </div>
            </aside>

            <!-- Main Content Section -->
            <main role="main" class="col-md-9 col-lg-10">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2024 - Airline Reservations System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
