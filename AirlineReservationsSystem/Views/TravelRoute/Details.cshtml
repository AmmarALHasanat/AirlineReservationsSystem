@model AirlineReservationsSystem.Domain.Entities.TravelRoute

@{
    ViewData["Title"] = "Route Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Route Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Route ID</dt>
        <dd class="col-sm-10">@Model.RouteId</dd>
        <dt class="col-sm-2">Origin</dt>
        <dd class="col-sm-10">@Model.Origin</dd>
        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>
        <dt class="col-sm-2">Estimated Time</dt>
        <dd class="col-sm-10">@Model.EstimatedTime</dd>
    </dl>

    <div>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        <a href="@Url.Action("Edit", new { id = Model.RouteId })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Delete", new { id = Model.RouteId })" class="btn btn-danger">Delete</a>
    </div>
</div>
