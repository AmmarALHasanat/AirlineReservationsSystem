@model IEnumerable<Airplane>

@{
    ViewData["Title"] = "Airplanes";
}

<h1 class="mb-4">Airplane List</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Available Airplanes</h3>
    <a asp-action="Create" class="btn btn-success">Create New Airplane</a>
</div>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Model</th>
            <th>Capacity</th>
            <th>Seats</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var airplane in Model)
            {
                <tr>
                    <td>@airplane.Model</td>
                    <td>@airplane.Capacity</td>
                    <td>
                        <ul class="list-unstyled mb-0">
                            @foreach (var seat in airplane.Seats)
                            {
                                <li><strong>@seat.Class:</strong> @seat.TotalNumber</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@airplane.AirplaneId" class="btn btn-sm btn-primary me-2">Edit</a>
                        <a asp-action="Details" asp-route-id="@airplane.AirplaneId" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No airplanes available.</td>
            </tr>
        }
    </tbody>
</table>
