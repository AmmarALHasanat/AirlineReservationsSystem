@model IEnumerable<Flight>

<div class="container mt-5 home-card">
    <h2 class="text-center mb-4 text-light">Available Flights</h2>
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Flight Number</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Departure Time</th>
                    <th>Arrival Time</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.FlightNumber</td>
                        <td>@flight.Route.Origin</td>
                        <td>@flight.Route.Destination</td>
                        <td>@flight.DepartureTime.ToString("dd/MM/yyyy hh:mm tt")</td>
                        <td>@flight.ArrivalTime.ToString("dd/MM/yyyy hh:mm tt")</td>
                        @* <td>@flight.Price.ToString("C")</td> *@
                        @* <td> *@
                        @*     <a href="/Flight/Details/@flight.FlightId" class="btn btn-sm btn-primary">View Details</a> *@
                        @*     <a href="/Flight/Book/@flight.FlightId" class="btn btn-sm btn-success">Book Now</a> *@
                        @* </td> *@
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <strong>No Flights Found</strong>
            <p>We couldn't find any flights matching your search criteria. Please refine your search and try again.</p>
        </div>
    }
</div>
