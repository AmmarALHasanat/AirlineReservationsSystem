@model IEnumerable<AirlineReservationsSystem.Domain.Entities.Flight>

@{
    ViewData["Title"] = "All Flights";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Flight ID</th>
            <th>Airplane</th>
            <th>Route</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.FlightId</td>
                <td>@flight.Airplane.Model</td>
                <td>@flight.Route.Origin - @flight.Route.Destination</td>
                <td>
                    <a href="@Url.Action("Edit", "Flight", new { id = flight.FlightId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Flight", new { id = flight.FlightId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Flight")" class="btn btn-primary">Add New Flight</a>
